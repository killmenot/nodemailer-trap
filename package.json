{
  "name": "nodemailer-trap-plugin",
  "version": "3.0.0",
  "description": "Nodemailer plugin to intercept emails in non production environments",
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "author": {
    "name": "Alexey Kucherenko",
    "url": "https://github.com/killmenot"
  },
  "keywords": [
    "nodemailer",
    "plugin",
    "trap",
    "interceptor",
    "staging",
    "non production",
    "environment"
  ],
  "license": "MIT",
  "homepage": "https://github.com/killmenot/nodemailer-trap-plugin",
  "repository": {
    "type": "git",
    "url": "git@github.com:killmenot/nodemailer-trap-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/killmenot/nodemailer-trap-plugin/issues"
  },
  "scripts": {
    "lint": "jshint lib test index.js",
    "test": "mocha",
    "coverage": "nyc --reporter=html --reporter=text mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ]
  },
  "dependencies": {
    "addressparser": "^1.0.1",
    "escape-string-regexp": "^4.0.0",
    "string-format": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "jshint": "^2.12.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2"
  }
}
